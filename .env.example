# ===========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
# Your production domain (without https://)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
# Get your API key from https://resend.com
RESEND_API_KEY=your_resend_api_key_here

# Email addresses for contact form
NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com
FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# ANALYTICS (Google Analytics 4)
# ===========================================
# Get your GA4 Measurement ID from Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# SECURITY
# ===========================================
# Generate a random string for NextAuth or other auth needs
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://yourdomain.com

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to 'true' to enable development features
NEXT_PUBLIC_IS_DEVELOPMENT=false

# ===========================================
# OPTIONAL: Database (if using)
# ===========================================
# DATABASE_URL=your_database_url_here

# ===========================================
# OPTIONAL: API Keys (if using external APIs)
# ===========================================
# OPENAI_API_KEY=your_openai_api_key_here
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
# STRIPE_SECRET_KEY=your_stripe_secret_key_here

# ===========================================
# OPTIONAL: Social Media (for SEO)
# ===========================================
# TWITTER_HANDLE=@yourtwitterhandle
# FACEBOOK_APP_ID=your_facebook_app_id

# ===========================================
# OPTIONAL: Monitoring (Sentry, etc.)
# ===========================================
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
