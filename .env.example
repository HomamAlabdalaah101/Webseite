# ===========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
# Your production domain (without https://)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ===========================================
# EMAIL SERVICE (Gmail SMTP)
# ===========================================
# Create an App Password at: https://myaccount.google.com/apppasswords
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to App Passwords and create one for "Mail"
# 3. Copy the 16-character password (without spaces)
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Gmail account to send from (default: homsef1212@gmail.com)
GMAIL_USER=homsef1212@gmail.com

# Where to receive contact form messages (default: same as GMAIL_USER)
CONTACT_EMAIL=homsef1212@gmail.com

# ===========================================
# ANALYTICS (Google Analytics 4)
# ===========================================
# Get your GA4 Measurement ID from Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# SECURITY
# ===========================================
# Generate a random string for NextAuth or other auth needs
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://yourdomain.com

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to 'true' to enable development features
NEXT_PUBLIC_IS_DEVELOPMENT=false

# ===========================================
# OPTIONAL: Database (if using)
# ===========================================
# DATABASE_URL=your_database_url_here

# ===========================================
# OPTIONAL: API Keys (if using external APIs)
# ===========================================
# OPENAI_API_KEY=your_openai_api_key_here
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
# STRIPE_SECRET_KEY=your_stripe_secret_key_here

# ===========================================
# OPTIONAL: Social Media (for SEO)
# ===========================================
# TWITTER_HANDLE=@yourtwitterhandle
# FACEBOOK_APP_ID=your_facebook_app_id

# ===========================================
# OPTIONAL: Monitoring (Sentry, etc.)
# ===========================================
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
