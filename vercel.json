{
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "regions": ["fra1"],
    "functions": {
        "app/api/**/*.ts": {
            "maxDuration": 10
        }
    },
    "rewrites": [{
        "source": "/api/(.*)",
        "destination": "/api/$1"
    }],
    "headers": [{
            "source": "/(.*)",
            "headers": [{
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "camera=(), microphone=(), geolocation=()"
                }
            ]
        },
        {
            "source": "/api/(.*)",
            "headers": [{
                "key": "Cache-Control",
                "value": "no-cache, no-store, must-revalidate"
            }]
        },
        {
            "source": "/_next/static/(.*)",
            "headers": [{
                "key": "Cache-Control",
                "value": "public, max-age=31536000, immutable"
            }]
        }
    ],
    "redirects": [{
        "source": "/home",
        "destination": "/",
        "permanent": true
    }]
}